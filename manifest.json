{
    "manifest_version": 3,
    "name": "TAS-Annotool Timer",
    "version": "1.0.0",
    "description": "TAS-Annotools の video src ごとに作業時間を計測します",

    "permissions": ["storage", "tabs", "alarms"],
    "host_permissions": [
        "https://app.example.com/*"
    ],

    "background": {
        "service_worker": "background.js"
    },

    "action": {
        "default_popup": "popup.html",
        "default_title": "作業時間トラッカー"
    },

    "content_scripts": [
        {
            "matches": ["https://app.example.com/*"],
            "js": ["content_script.js"]
        }
    ]
}
